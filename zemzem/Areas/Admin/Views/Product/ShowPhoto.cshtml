@model List<TbProductImages>
<div class="page-body">



    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card card-info">
                    <div class="card-body">

                        <a asp-controller="Product" asp-action="EditPhoto" class="btn btn-info">New Photo</a>

                        <table class="table table-hover text-nowrap">

                            <thead>
                                <tr>

                                    <th>Product Id</th>
                                    <th>Product Image</th>
                                    <th>Actions</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.ProductId</td>


                                        <td>
                                            <img src="@string.Format("/Uploads/{0}",item.ImageName)" width="70" height="70" />
                                        </td>
                                        <td>
                                            <a asp-controller="Product" asp-action="EditPhoto" asp-route-id="@item.ProductId" class="btn btn-warning">Edit</a>
                                            <a asp-controller="Product" asp-action="DeletePhoto" asp-route-id="@item.ProductId" class="btn btn-primary">Delete</a>
                                        </td>


                                    </tr>

                                }



                            </tbody>
                        </table>
                        <div class="d-flex w-100 justify-content-center">
                            <pagination page-count="@ViewBag.TotalPages" page-target="/Admin2/Product/ShowPhoto" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
                        </div>

                    </div>
                </div>



            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->




</div>
