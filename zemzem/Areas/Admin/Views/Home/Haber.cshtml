
@model List<TbHaber>
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card card-info">
                    <div class="card-body">

                        <a asp-controller="Home" asp-action="EditHaber" class="btn btn-info">New Haber</a>

                        <table class="table table-hover text-nowrap">

                            <thead>
                                <tr>

                                    <th>Haber Id</th>
                                    <th>Haber Image</th>
                                    <th>Actions</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.TbHaberId</td>


                                        <td>
                                            <img src="@string.Format("/haber/{0}",item.HaberImage)" width="200" height="60" />
                                        </td>
                                        <td>
                                            <a asp-controller="Home" asp-action="EditHaber" asp-route-id="@item.TbHaberId" class="btn btn-warning">Edit</a>
                                            <a asp-controller="Home" asp-action="DeleteHaber" asp-route-id="@item.TbHaberId" class="btn btn-primary">Delete</a>
                                        </td>


                                    </tr>

                                }



                            </tbody>
                        </table>
                    </div>
                </div>



            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->




</div>
