@model TbHaber
<div class="page-body">



    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <div class="card card-info">
                    <div class="card-header">
                        <div class="btn btn-primary">Add Haber</div>
                    </div>
                    <form asp-controller="Home" asp-action="SaveHaber" method="post"
                          role="form" class="form-horizontal" enctype="multipart/form-data">
                        <div class="card-body">


                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
                                <div class="col-sm-4">
                                    <input type="text" asp-for="Title" class="form-control" placeholder="Title">

                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Discription </label>
                                <textarea class="form-control" placeholder="Discription"
                                          asp-for="Discription" rows="6" required=""></textarea>
                            </div>
                            
                            <div class="form-group row">
                                <input type="hidden" asp-for="TbHaberId" />
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Haber Image</label>
                                <div class="col-sm-4">
                                    <input type="file" name="Files" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="date" class="col-sm-2 col-form-label">Haber Date</label>
                                <div class="col-sm-4">
                                    <input type="date" asp-for="HaberDate" class="form-control" required>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">Submit</button>

                            </div>

                        </div>

                        
                    </form>

                </div>



            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->




</div>

